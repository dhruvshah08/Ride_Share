<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:orientation="vertical"
    android:background="#F8F8F0"
    >

    <LinearLayout
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewProfilePhoto"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/rounded_border"
            android:src="@drawable/ic_launcher_foreground"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/btnChoose"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="100dp"

            android:src="@drawable/camera"></ImageButton>

    </LinearLayout>
    <EditText
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/etName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="E-Mail Address" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Enter Password"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etEmergencyContactName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="Emergency Contact Name"
        android:inputType="textPersonName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="number" />

        <EditText
            android:id="@+id/etEmergencyContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Emergency Number"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/etAge"
            android:layout_width="74dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="Age"
            android:inputType="number" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="246dp"
            android:layout_height="51dp"
            android:layout_marginLeft="45dp"
            android:entries="@array/gender" />

    </LinearLayout>

    <Button
        android:id="@+id/btnOpenVerify"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/buttons_rounded"
        android:text="Verify Phone Number"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:enabled="false"
        android:background="@drawable/buttons_rounded"
        android:text="Sign Up"/>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:text="Have an account already? Login"
        android:textSize="15dp" />



</LinearLayout>