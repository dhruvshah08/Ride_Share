<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_boxes"
    >

    <HorizontalScrollView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="214dp">

        <LinearLayout
            android:id="@+id/listOfMyCars"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#030e12"
        android:hint="With whom are comfortable to share your ride with?"
        android:layout_margin="15dp"
        />

    <LinearLayout
        android:id="@+id/genderGroup"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chkMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="#030e12"
            android:textSize="20dp"></CheckBox>

        <CheckBox
            android:id="@+id/chkFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#030e12"
            android:text="Female"
            android:textSize="20dp"></CheckBox>

        <CheckBox
            android:id="@+id/chkOther"
            android:layout_width="wrap_content"
            android:textColor="#030e12"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textSize="20dp"></CheckBox>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Number of Free Seats :"
            android:textSize="20dp"
            android:textColor="#030e12"
            />
        <Button
            android:layout_marginRight="20dp"
            android:id="@+id/btnDecrement"
            android:background="@drawable/buttons_rounded"
            android:layout_width="50dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/txtInitialNoOfSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#030e12"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/btnIncrement"
            android:background="@drawable/buttons_rounded"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+" />

    </LinearLayout>

    <Button
        android:id="@+id/btnStartRide"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:textColor="#030e12"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons_rounded"
        android:text="Start Ride" />
</LinearLayout>